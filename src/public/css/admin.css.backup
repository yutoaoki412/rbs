  color: var(--admin-primary);
}

/* アクションボタングリッド */
.action-buttons-grid {
  display: flex;
  flex-direction: column; /* グリッドから縦並びフレックスに変更 */
  gap: 0.75rem; /* 1remから縮小 */
  margin-top: 0;
}

/* コンパクトアクションボタン */
.action-btn.compact {
  background: white;
  border: 1px solid var(--admin-gray-200);
  border-radius: 12px;
  padding: 1.5rem; /* さらに拡大 */
  min-height: 80px; /* 最小高さを設定 */
  display: flex;
  align-items: center;
  gap: 1rem; /* 0.75remから拡大 */
  transition: all 0.2s ease;
  cursor: pointer;
  text-align: left;
  width: 100%;
}

.action-btn.compact:hover {
  border-color: var(--admin-primary);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.action-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 1.1rem;
  color: white;
}

.action-content {
  flex: 1;
}

.action-title {
  display: block;
  font-weight: 600;
  font-size: 0.9rem;
  color: var(--admin-gray-900);
  margin-bottom: 0.3rem;
}

.action-desc {
  display: block;
  font-size: 0.75rem;
  color: var(--admin-gray-500);
  line-height: 1.4;
}

/* アクションボタンの色分け */
.action-btn.compact.success .action-icon {
  background: var(--admin-success);
}

.action-btn.compact.info .action-icon {
  background: var(--admin-primary);
}

.action-btn.compact.secondary .action-icon {
  background: var(--admin-gray-500);
}

.action-btn.compact.warning .action-icon {
  background: var(--admin-warning);
}

