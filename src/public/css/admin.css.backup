}

.status-option.scheduled input:checked ~ .option-card .option-icon i {
  color: white;
}

.status-option.scheduled input:checked ~ .option-card .option-check {
  background: var(--status-scheduled);
  opacity: 1;
}

.status-option.cancelled input:checked ~ .option-card {
  border-color: var(--status-cancelled);
  background: linear-gradient(135deg, rgba(231, 76, 60, 0.05), rgba(236, 85, 105, 0.1));
}

.status-option.cancelled input:checked ~ .option-card::before {
  background: var(--status-cancelled);
}

.status-option.cancelled input:checked ~ .option-card .option-icon {
  background: var(--status-cancelled);
}

.status-option.cancelled input:checked ~ .option-card .option-icon i {
  color: white;
}

.status-option.cancelled input:checked ~ .option-card .option-check {
  background: var(--status-cancelled);
  opacity: 1;
}

.status-option.indoor input:checked ~ .option-card {
  border-color: var(--status-indoor);
  background: linear-gradient(135deg, rgba(243, 156, 18, 0.05), rgba(245, 166, 35, 0.1));
}

.status-option.indoor input:checked ~ .option-card::before {
  background: var(--status-indoor);
}

.status-option.indoor input:checked ~ .option-card .option-icon {
  background: var(--status-indoor);
}

.status-option.indoor input:checked ~ .option-card .option-icon i {
  color: white;
}

.status-option.indoor input:checked ~ .option-card .option-check {
  background: var(--status-indoor);
  opacity: 1;
}

.status-option.postponed input:checked ~ .option-card {
  border-color: var(--status-postponed);
  background: linear-gradient(135deg, rgba(52, 152, 219, 0.05), rgba(93, 173, 226, 0.1));
}

.status-option.postponed input:checked ~ .option-card::before {
  background: var(--status-postponed);
}

.status-option.postponed input:checked ~ .option-card .option-icon {
  background: var(--status-postponed);
}

.status-option.postponed input:checked ~ .option-card .option-icon i {
  color: white;
}

.status-option.postponed input:checked ~ .option-card .option-check {
  background: var(--status-postponed);
  opacity: 1;
}

