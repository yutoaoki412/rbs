}

/* 最初の3つのみ表示するための制限 */
.recent-article-item:nth-child(n+4) {
  display: none; /* 4番目以降は非表示 */
}

.recent-article-item:nth-child(1) { animation-delay: 0.1s; }
.recent-article-item:nth-child(2) { animation-delay: 0.2s; }
.recent-article-item:nth-child(3) { animation-delay: 0.3s; }

