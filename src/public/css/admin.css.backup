    padding: 1rem;
  }
  
  .course-header {
    padding: 1rem;
  }
  
  .course-content {
    padding: 1rem;
  }
  
  .status-buttons {
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }
  
  .form-actions {
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .form-actions .btn {
    min-width: auto;
  }
  
  .status-display {
    flex-direction: column;
    align-items: stretch;
    gap: 0.75rem;
  }
  
  .status-item {
    justify-content: center;
    padding: 0.75rem;
    background: var(--admin-gray-50);
    border-radius: var(--admin-border-radius-sm);
  }
